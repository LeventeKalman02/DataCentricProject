            <input disabled nametype="text" id="sid" value="<%= store.sid %>"><br>
            <label for="location">Location:</label><br>
            <input name="location" type="text" id="loc" value="<%= store.location %>"><br>
            <label for="manager">Manager:</label><br>
            <input name="mgrid" type="text" id="mangr" value="<%= store.mgrid %>"><br><br>
            <input type="submit" value="Submit">
            <a href="/stores">Cancel</a>
        </form>
