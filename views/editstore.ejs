        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- get the title of the page dynamically -->
        <title>Data Centric Project | <%= title %>
        </title>
    </head>

    <body>
        <div>
            <a href="/"><h1>Home</h1></a>
